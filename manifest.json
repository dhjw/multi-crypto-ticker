{
	"name": "Multi Crypto Ticker",
	"description": "Watch multiple cryptocurrency prices from your browser toolbar",
	"manifest_version": 2,
	"version": "1.0.11",
	"icons": {
		"128": "img/default.png"
	},
	"permissions": [
		"storage",
		"alarms",
		"contextMenus"
	],
	"browser_action": {
		"default_icon": "img/default.png"
	},
	"options_page": "options.html",
	"background": {
		"scripts": ["bignumber.min.js","global.js","event.js"],
		"persistent": false
	}
}
